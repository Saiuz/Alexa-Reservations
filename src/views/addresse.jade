include nav_common.jade
.container
  .row
    .col-md-5
      .panel.panel-default
        .panel-heading
          .form-horizontal
            span.input-group  Testing
            button(ng-click="newRes()") New Res
            button(ng-click="curRes()") Current Res
        .panel-body
          div.form-horizontal
            .form-group
              label.control-label.col-xs-4 Zimmer
              .col-xs-8
                ax-room-select(room-list="roomList" rooms="rooms" guest="{{name}}" plan-price="{{price}}" room-count="roomCount")
    .col-md-7
      .panel.panel-default
        .panel-heading Reservation {{reservationNumber}}
        .panel-body(ng-show="showRes")
           ax-reservation(reservation-number="reservationNumber")

